<!-- views/pages/gifchat_login.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
  <title>GifChat - Login | CS 313 Node.js Project</title>
  <script src="/scripts/gifchat_login_client.js"></script>
  <!-- Page specific css -->
  <link rel="stylesheet" type="text/css" href="/stylesheets/gifchat.css" />
</head>

<body>

  <header>
    <div class="jumbotron">
      <h1>GifChat</h1>
    </div>
  </header>

  <section>

    <div class="container pt-3" id="login_area">
      <p>Please login with an existing username and password, or create a new username</p>
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="username">Password</label>
        <input type="password" id="password" class="form-control" required>
      </div>
      <button class="btn btn-primary" id="login">Login</button>
    </div>
    <div class="container">
      <div class="alert alert-dismissible fade hide alert-danger" role="alert" id="loginFailure">
        Login failure, please try again
      </div>
    </div>
    
  </section>
  
</body>

</html>